
#loading
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%

  background: #FFFFFF
  transition: all 1000ms ease

  text-align: center
  font-size: 10px
  user-select: none

  .container.mobile-only
    position: absolute
    width: 100%
    top: 50%

    .logo
      position: absolute
      width: 186px
      height: 34px
      left: 50%
      transform: translate(-50%, -60px)
      background: url(images/MoFace.svg) no-repeat center/100%

    .progress
      position: absolute
      width: 100%
      height: 16px
      top: -8px
    
    .loading
      position: relative
      top: 24px
      margin: auto
      letter-spacing: 0.1em
      font-size: 20px


    .bar
      width: 0%
      height: 100%
      background: _keyColor
      transition: width 500ms ease 0
    
    .button
      position: absolute
      width: 106px
      height: 20px
      left: 50%
      top: 40px
      transform: translate(-50%)
      outline: solid 1px _keyColor
      font-size: 10px
      text-align: center
      line-height: 20px
      user-select: none
      transition: background-color 0.3s ease
    
    p
      margin: 96px 0 0 0

  .container.pc-only
    position: relative
    width: 508px
    height: 508px
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

    svg
      width: 100%
      height: 100%
      circle
        fill: none
        stroke: _keyColor
        stroke-width: 1
        transform-origin: center center
        transform: rotate(-90deg)
