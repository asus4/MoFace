@import 'nib'
@import 'pages/_common'

global-reset()

*
  box-sizing: border-box

html, body, ul, h2, h3, hr, p, hr
  -webkit-margin-before: 0
  -webkit-margin-after: 0

html, body
  color: _keyColor
  background: #FFF
  font-family: 'Questrial', 'Rounded Mplus 1c', sans-serif
  font-size: 12px

p
  line-height: 2em


nav
  position: fixed
  width: 100%
  padding: 15px

  /#info-button
    position: absolute
    width: 40px
    height: 40px
    right: 0
    background: url(images/sp/info_button_white.svg) no-repeat center/50%
    /.text-mode #info-button
      background-image: url(images/sp/info_button_orange.svg)

  /#makeface-button
    position: absolute
    width: 66px
    height: 40px
    left: 50%
    transform: translate(-50%, 0)
    background: url(images/sp/addyourself_white.svg) no-repeat center/50%
    /.text-mode #makeface-button
      background-image: url(images/sp/addyourself_orange.svg)

  /#mode-button
    position: absolute
    width: 40px
    height: 40px
    left: 0
    background: url(images/sp/modeswitch_white.svg) no-repeat center/50%
    color: #fff
    span
      position: absolute
      margin: 22px 0px 0px 34px
    /.text-mode #mode-button
      background-image: url(images/sp/modeswitch_orange.svg)
      color: _keyColor

footer
  position: absolute
  width: 100%
  bottom: 0
  .button.keyboard
    width: (98/2)px
    height: (74/2)px
    background: url(images/sp/key.svg) no-repeat center/50%
    margin: auto
  .share
    position: absolute
    display: flex
    right: 0px
    bottom: 0
    .facebook
      width: 32px
      height: 32px
      background: url(images/sp/facebook.svg) no-repeat center/23%
    .twitter
      width: 32px
      height: 32px
      background: url(images/sp/twitter.svg) no-repeat center/50%
    span
      display: block
      margin: 10px 0 0 0
/.speak-mode footer
  display: none


#main
  position: fixed
  overflow: hidden
  user-select: none
  width: 100%
  height: 100%
  canvas
    position: absolute
    width: 100%
    bottom: 0
  .webgl
    top: 0
  .ui
    top: 50px
    height: calc(100% - 50px)
  /.text-mode canvas.ui
    display: none

@require 'pages/info'
@require 'pages/makeface'
@require 'pages/loading'
